<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/scenarioListItem"
        android:background="@drawable/shadow_bg"/>

    <TextView
        android:id="@+id/scenarioListItem"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:singleLine="true"
        android:background="@android:color/white"/>

    <ImageView
        android:id="@+id/itemListSpeakerButton"
        android:contentDescription="@string/content_description"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:padding="3dp"
        android:src="@drawable/speaker_green"
        android:layout_alignRight="@id/shadow"
        android:layout_alignBottom="@id/shadow"/>


</RelativeLayout>